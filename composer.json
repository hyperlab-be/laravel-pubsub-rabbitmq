{
    "name": "hyperlab-be/laravel_pubsub_rabbitmq",
    "description": "An opinionated approach to implement PubSub messaging in Laravel.",
    "keywords": [
        "hyperlab-be",
        "laravel",
        "laravel_pubsub_rabbitmq"
    ],
    "homepage": "https://github.com/hyperlab-be/laravel_pubsub_rabbitmq",
    "license": "MIT",
    "authors": [
        {
            "name": "Hyperlab",
            "email": "kempenmichiel@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.4.3",
        "illuminate/contracts": "^8.0"
    },
    "require-dev": {
        "brianium/paratest": "^6.2",
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench": "^6.15",
        "phpunit/phpunit": "^9.3",
        "spatie/laravel-ray": "^1.9",
        "vimeo/psalm": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "HyperlabBe\\LaravelPubSubRabbitMQ\\": "src",
            "HyperlabBe\\LaravelPubSubRabbitMQ\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperlabBe\\LaravelPubSubRabbitMQ\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "HyperlabBe\\LaravelPubSubRabbitMQ\\LaravelPubSubRabbitMQServiceProvider"
            ],
            "aliases": {
                "LaravelPubSubRabbitMQ": "HyperlabBe\\LaravelPubSubRabbitMQ\\LaravelPubSubRabbitMQFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
